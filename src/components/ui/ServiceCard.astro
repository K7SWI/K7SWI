---
import { Image } from "astro:assets";
import Card from "./Card.astro";

import CyanLogo from "@assets/icon5.svg";
import BlueLogo from "@assets/icon6.svg";
import WhiteLogo from "@assets/icon7.svg";

/* 
1. Gray card with cyan title and blue on black icon 
2. Blue card with white title and black on white icon
3. Cyan card with White title and black on gray icon
*/

const { index, titleTop, titleBottom, img, alt, link } = Astro.props;
---

<Card isUnderline={true}>
  <div
    class=`h-[300px] w-full sm:h-full lg:gap-[60px] grid custom-grid lg:grid-cols-2 lg:grid-rows-1 p-8 sm:p-[50px] rounded-[45px] ${index === 1 ? 'bg-gray' : index === 2 ? 'bg-blue' : 'bg-cyan'}`
  >
    <h3 class=`flex flex-col col-span-2 lg:col-span-1`>
      <span
        class=`w-[fit-content] ${index === 1 ? 'cyanhead' : index == 2 ? 'whitehead' : 'grayhead' }`
        >{titleTop}</span
      >
      <span
        class=`w-[fit-content] ${index === 1 ? 'cyanhead' : index == 2 ? 'whitehead' : 'grayhead' }`
        >{titleBottom}</span
      >
    </h3>
    <picture
      class="w-full h-full row-span-1 order-1 lg:order-none lg:row-span-2 flex justify-center items-center"
    >
      <Image
        src={img}
        alt={alt}
        class="h-[100px] w-auto sm:h-auto sm:w-3/4 object-cover"
      />
    </picture>
    <div class="flex items-end">
      <a href={link} class="flex items-center gap-3.5">
        {
          index == 1 ? (
            <BlueLogo aria-label={alt} />
          ) : index == 2 ? (
            <WhiteLogo aria-label={alt} />
          ) : (
            <CyanLogo aria-label={alt} />
          )
        }
        <span class="hidden sm:block">Learn More</span></a
      >
    </div>
  </div>
</Card>

<style>
  .custom-grid {
    grid-template: auto auto;
  }
</style>
