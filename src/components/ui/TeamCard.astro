---
import Card from "./Card.astro";

const { pic, name, role, callsign } = Astro.props;
---

<Card isUnderline={true}>
  <div class="p-[60px]">
    <div class="flex flex-col sm:flex-row relative">
      <picture><img src={pic} alt={name} /></picture>
      <div class="flex flex-col justify-end sm:ml-5">
        <h3 class="text-lg font-medium">{name}</h3>
        <p class="text-sm font-normal">{role}</p>
      </div>
      <pre class="absolute right-0 top-0 text-xl">{callsign}</pre>
    </div>
  </div>
</Card>
