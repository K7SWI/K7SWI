---
import { Image } from "astro:assets";
import Facebook from "@assets/facebook.svg";
import GroupsIO from "@assets/groupsio.svg";
import YouTube from "@assets/youtube.svg";
import Logo from "@assets/logo-alt.svg";

const logos = [
  {
    name: "Facebook",
    src: Facebook,
    link: "https://www.facebook.com/groups/SouthWestIdahoARC",
  },
  { name: "Youtube", src: YouTube, link: "https://www.youtube.com/@SWIdahoARC" },
  { name: "GroupsIO", src: GroupsIO, link: "https://groups.io/g/swidahoarc" },
];

const links = [
  { name: "About us", href: "/about" },
  { name: "Events", href: "/#events" },
  { name: "Calendar", href: "/calendar" },
  { name: "Repeaters", href: "/#repeater-info" },
  { name: "AREDN", href: "/aredn" },
  { name: "Blog", href: "/articles" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <Image src={Logo} alt="Logo for Kreatif Brand" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5 text-center md:text-left text-2xl text-green">
              Contact us
            </h3>
            <div class="flex flex-col justify-between gap-4">
              <span>
                Email: <a href="mailto:SWIDAHOARC@gmail.com" class="underline"
                  >SWIdahoARC@gmail.com</a
                >
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-gray mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >2025 SWI-ARC - Made With <a
            class="underline"
            target="_blank"
            href="https://astro.build">Astro</a
          > and
          <a
            class="underline"
            target="_blank"
            href="https://github.com/manulthanura/Positivus">Postivus</a
          > by Don Locke</span
        >&nbsp
        <span>
          Credits (
          <a href="https://manulthanura.com" target="_blank" class="underline"
            >Manul</a
          >,
          <a
            href="https://www.olgaskuja.design/"
            target="_blank"
            class="underline">Olga</a
          >,
          <a
            href="https://esteban-vasquez.netlify.app/"
            target="_blank"
            class="underline">Esteban</a
          >)
          <span> &</span>
          <a
            class="underline"
            href="https://creativecommons.org/licenses/by/4.0/"
            target="_blank">Licence</a
          >
        </span>
      </div>
    </div>
  </div>
</section>
