---
import MainLayout from "../../layouts/MainLayout.astro";
import Tags from "../../components/ui/Tags.astro";
import { getEntry, render } from "astro:content";
import { formatDate } from "../../utils";

import "../../styles/global.css";
import { Image } from "astro:assets";

const { slug } = Astro.params;

if (slug === undefined) {
  throw new Error("Slug is required");
}

const entry = await getEntry("blog", slug);

if (entry === undefined) {
  return Astro.redirect("/404");
}

const images = import.meta.glob<{ default: ImageMetadata }>("@assets/pics/*.{jpeg,jpg,png,gif}");
if (entry.data.image.src !== "") {
  if (!images[entry.data.image.src]) throw new Error(`"${entry.data.image.src}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
}

const { Content } = await render(entry);
---

<MainLayout title={entry.data.title}>
  <main class="space-y-40 mb-40 pt-24">
    <section class="bg-white">
      <div
        class="gap-16 items-center py-8 px-4 mx-auto max-w-screen-xl lg:grid lg:grid-cols-1 lg:pt-16 lg:px-3"
      >
        <div class="font-light text-gray-500 sm:text-lg">
          <a
            href="/articles"
            class="inline-flex items-center font-medium text-black hover:text-blue my-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="h-6 w-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 16l-4-4m0 0l4-4m-4 4h18"
              >
              </path>
            </svg>
            <span class="ml-1 font-bold text-lg">All Articles</span>
          </a>
          <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900">
            {entry.data.title}
          </h2>
          <h3 class="text-lg mb-2">
            Written by {entry.data.author} on {formatDate(entry.data.pubDate)}
          </h3>
          <Tags tags={entry.data.tags} />
          { entry.data.image.src !== "" &&
            <Image
              class="w-full h-auto rounded-xl my-6"
              src={images[entry.data.image.src]()}
              alt={entry.data.image.alt}
            />
          }
          <div class="content">
            <Content />
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
